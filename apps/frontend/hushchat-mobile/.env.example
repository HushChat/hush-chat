# ============================================================
# API CONFIGURATION
# ============================================================

# Example for production
# EXPO_PUBLIC_API_HOST='chat-api.yourdomain.com'
# EXPO_PUBLIC_API_PORT='443'
# EXPO_PUBLIC_API_PROTOCOL='https'

# Example for local development
EXPO_PUBLIC_API_HOST='localhost'
EXPO_PUBLIC_API_PORT='3092'
EXPO_PUBLIC_API_PROTOCOL='http'

# WebSocket protocol (ws for local, wss for secure/production)
EXPO_PUBLIC_WS_PROTOCOL='ws'

# Tenant or workspace identifier
EXPO_PUBLIC_TENANT='localhost'


# ============================================================
# FIREBASE CONFIGURATION (REQUIRED for notifications/calls)
# ============================================================

EXPO_PUBLIC_FIREBASE_PROJECT_ID='your-firebase-project-id'
EXPO_PUBLIC_FIREBASE_APP_ID='your-firebase-app-id'
EXPO_PUBLIC_FIREBASE_AUTH_DOMAIN='your-firebase-auth-domain'
EXPO_PUBLIC_FIREBASE_STORAGE_BUCKET='your-firebase-storage-bucket'
EXPO_PUBLIC_FIREBASE_API_KEY='your-firebase-api-key'
EXPO_PUBLIC_FIREBASE_MESSAGING_SENDER_ID='your-firebase-messaging-sender-id'
EXPO_PUBLIC_FIREBASE_MEASUREMENT_ID='your-firebase-measurement-id'
EXPO_PUBLIC_FIREBASE_VAPID='your-firebase-vapid-key'


# ============================================================
# DEBUG SETTINGS
# ============================================================

EXPO_DEBUG=true
