<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <springProperty scope="context" name="springAppName" source="spring.application.name"/>
    <springProperty scope="context" name="activeProfiles" source="spring.profiles.active"/>
    <springProperty scope="context" name="logElkEnabled" source="log.elk.enabled"/>

    <appender name="LOGSTASH" class="net.logstash.logback.appender.LogstashTcpSocketAppender">
        <destination>logstash.lead365.net:5000</destination>
        <encoder class="net.logstash.logback.encoder.LogstashEncoder">
            <customFields>{"service_name":"${springAppName}","environment":"${activeProfiles}"}</customFields>
            <includeMdc>true</includeMdc> <!-- Include All Mapped Diagnostic Context (MDC) key-value pairs in the log -->
            <includeContext>false</includeContext> <!-- Do not include Logback context properties (e.g., springAppName, activeProfiles, logElkEnabled) in the log output -->
        </encoder>
    </appender>

    <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <encoder class="ch.qos.logback.classic.encoder.PatternLayoutEncoder">
<!-- Uncomment to view the full log -->
<!--            <pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} %-5level %logger{36} - %msg [%thread] %n%X</pattern>-->
            <pattern>%d{yyyy-MM-dd HH:mm:ss} %-5level %X{userEmail} %logger{36} - %msg %n</pattern>
        </encoder>
    </appender>

    <root level="INFO">
        <appender-ref ref="CONSOLE" />
        <if condition='property("logElkEnabled").contains("true")'>
            <then>
                <appender-ref ref="LOGSTASH" />
            </then>
        </if>
    </root>
</configuration>