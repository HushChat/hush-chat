<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <!-- Load Spring properties -->
    <springProperty scope="context" name="springAppName" source="spring.application.name"/>
    <springProperty scope="context" name="activeProfiles" source="spring.profiles.active"/>
    <springProperty scope="context" name="logElkEnabled" source="log.elk.enabled"/>

    <!-- ========================================== -->
    <!--  Console Appender                         -->
    <!-- ========================================== -->
    <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <encoder class="ch.qos.logback.classic.encoder.PatternLayoutEncoder">
            <pattern>%d{yyyy-MM-dd HH:mm:ss} %-5level %X{userEmail} %logger{36} - %msg %n</pattern>
        </encoder>
    </appender>

    <!-- ========================================== -->
    <!--  Logstash / ELK Appender (Template Only)  -->
    <!-- ========================================== -->
    <!-- Replace 'your-logstash-host' and 'your-port' with actual values -->
    <appender name="LOGSTASH" class="net.logstash.logback.appender.LogstashTcpSocketAppender">
        <destination>your-logstash-host:your-port</destination>
        <encoder class="net.logstash.logback.encoder.LogstashEncoder">
            <customFields>{"service_name":"${springAppName}","environment":"${activeProfiles}"}</customFields>
            <includeMdc>true</includeMdc>
            <includeContext>false</includeContext>
        </encoder>
    </appender>

    <!-- ========================================== -->
    <!--  Root Logger                              -->
    <!-- ========================================== -->
    <root level="INFO">
        <appender-ref ref="CONSOLE" />
        <if condition='property("logElkEnabled").contains("true")'>
            <then>
                <appender-ref ref="LOGSTASH" />
            </then>
        </if>
    </root>
</configuration>
