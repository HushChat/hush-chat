---
import Layout from "../layouts/Layout.astro";
---

<Layout title="HushChat - Where Teams Come Together to Communicate" activePage="home">
  <!-- HERO SECTION -->
  <section class="hero">
    <div class="container">
      <div class="hero-content">
        <h1>Where Teams Come Together to Communicate</h1>
        <p class="hero-subtitle">
          One workspace for your entire team. Organize conversations into groups, message teammates
          directly, and keep everyone in sync&#8212;effortlessly.
        </p>
        <a href="/contact" class="btn-primary hero-btn">Get started</a>
      </div>
      <div class="hero-image">
        <img
          src="/images/hushchat-hero-img-2048x1156.png"
          alt="HushChat application interface showing team conversations"
        />
      </div>
    </div>
  </section>

  <!-- SOCIAL PROOF BANNER -->
  <section class="social-proof">
    <div class="container">
      <p class="social-proof-text">
        Connected by <strong>100+</strong> Active HushChat Communities
      </p>
    </div>
  </section>

  <!-- TWO-COLUMN FEATURE SECTION -->
  <section class="feature-split section-padding">
    <div class="container">
      <div class="feature-split-grid">
        <!-- Left Column -->
        <div class="feature-split-left">
          <h2>Team Chat Made Simple and Powerful for Every Business</h2>
          <p class="feature-split-desc">
            HushChat brings your team's communication together in one place. Create workspaces for
            your organization, set up groups for different projects or departments, and message
            teammates directly&#8212;all without the complexity.
          </p>
          <div class="stat-boxes">
            <div class="stat-box stat-box--purple">
              <span class="stat-number">70%</span>
              <span class="stat-label">Cost Reduction</span>
            </div>
            <div class="stat-box stat-box--white">
              <span class="stat-number">40%</span>
              <span class="stat-label">Increase in Productivity</span>
            </div>
          </div>
        </div>

        <!-- Right Column -->
        <div class="feature-split-right">
          <h3>Your Team. Your Data. Your Space.</h3>
          <div class="feature-split-mockup">
            <img
              src="/images/mockup-section2-min.png"
              alt="HushChat mobile app mockup showing team workspace"
            />
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- FEATURES GRID SECTION -->
  <section class="features-grid section-padding">
    <div class="container">
      <div class="text-center">
        <h2 class="section-heading">Designed to Keep Teams Connected</h2>
        <p class="section-subtitle">
          Everything your team needs to communicate, collaborate, and stay organized&#8212;built for
          simplicity and speed.
        </p>
      </div>

      <div class="features-cards">
        <!-- Card 1: Real-Time Messaging -->
        <div class="feature-card">
          <div class="feature-card-icon">
            <svg
              width="32"
              height="32"
              viewBox="0 0 24 24"
              fill="none"
              stroke="#6B4EFF"
              stroke-width="1.5"
              stroke-linecap="round"
              stroke-linejoin="round"
              aria-hidden="true"
            >
              <path d="M21 15a2 2 0 0 1-2 2H7l-4 4V5a2 2 0 0 1 2-2h14a2 2 0 0 1 2 2z"></path>
              <path d="M8 9h8"></path>
              <path d="M8 13h5"></path>
            </svg>
          </div>
          <h3 class="feature-card-title">Real-Time Messaging</h3>
          <p class="feature-card-desc">
            Instant, reliable conversations for teams of any size. Send messages, share files, and
            react in real time &#8212; all within your secure workspace.
          </p>
        </div>

        <!-- Card 2: Group Conversations -->
        <div class="feature-card">
          <div class="feature-card-icon">
            <svg
              width="32"
              height="32"
              viewBox="0 0 24 24"
              fill="none"
              stroke="#6B4EFF"
              stroke-width="1.5"
              stroke-linecap="round"
              stroke-linejoin="round"
              aria-hidden="true"
            >
              <path d="M17 21v-2a4 4 0 0 0-4-4H5a4 4 0 0 0-4 4v2"></path>
              <circle cx="9" cy="7" r="4"></circle>
              <path d="M23 21v-2a4 4 0 0 0-3-3.87"></path>
              <path d="M16 3.13a4 4 0 0 1 0 7.75"></path>
            </svg>
          </div>
          <h3 class="feature-card-title">Group Conversations</h3>
          <p class="feature-card-desc">
            Create focused spaces for projects, departments, or discussions. Keep every conversation
            organized and easy to find.
          </p>
        </div>

        <!-- Card 3: Workspace Organization -->
        <div class="feature-card">
          <div class="feature-card-icon">
            <svg
              width="32"
              height="32"
              viewBox="0 0 24 24"
              fill="none"
              stroke="#6B4EFF"
              stroke-width="1.5"
              stroke-linecap="round"
              stroke-linejoin="round"
              aria-hidden="true"
            >
              <rect x="3" y="3" width="7" height="7" rx="1"></rect>
              <rect x="14" y="3" width="7" height="7" rx="1"></rect>
              <rect x="3" y="14" width="7" height="7" rx="1"></rect>
              <rect x="14" y="14" width="7" height="7" rx="1"></rect>
            </svg>
          </div>
          <h3 class="feature-card-title">Workspace Organization</h3>
          <p class="feature-card-desc">
            Keep teams, departments, or clients separate and organized. Each workspace has its own
            users, groups, and conversations.
          </p>
        </div>

        <!-- Card 4: Mobile & Web Access -->
        <div class="feature-card">
          <div class="feature-card-icon">
            <svg
              width="32"
              height="32"
              viewBox="0 0 24 24"
              fill="none"
              stroke="#6B4EFF"
              stroke-width="1.5"
              stroke-linecap="round"
              stroke-linejoin="round"
              aria-hidden="true"
            >
              <rect x="5" y="2" width="14" height="20" rx="2" ry="2"></rect>
              <path d="M12 18h.01"></path>
              <path d="M2 8h2"></path>
              <path d="M2 12h2"></path>
              <path d="M20 8h2"></path>
              <path d="M20 12h2"></path>
            </svg>
          </div>
          <h3 class="feature-card-title">Mobile & Web Access</h3>
          <p class="feature-card-desc">
            Stay connected from anywhere. Access HushChat on iOS, Android, or your web
            browser&#8212;your conversations sync instantly.
          </p>
        </div>
      </div>
    </div>
  </section>

  <!-- BENTO GRID SECTION -->
  <section class="bento section-padding">
    <div class="container">
      <div class="text-center">
        <h2 class="section-heading">Fast. Secure. Open. Yours.</h2>
        <p class="section-subtitle">
          Designed for performance and ease of use. HushChat keeps every conversation flowing
          smoothly.
        </p>
      </div>

      <div class="bento-grid">
        <!-- Top-left: Live Interaction -->
        <div class="bento-card bento-card--interaction">
          <span class="bento-label">Live Instant Interaction</span>
          <div class="bento-card-image">
            <!-- Placeholder: provide /images/live-interaction.png -->
            <img
              src="/images/live-interaction.png"
              alt="Live instant interaction feature on mobile"
            />
          </div>
        </div>

        <!-- Top-center: Helping Teams -->
        <div class="bento-card bento-card--teams">
          <p class="bento-card-text">Helping Teams Stay Connected and Work Better, Together</p>
        </div>

        <!-- Bottom-left: Available Everywhere -->
        <div class="bento-card bento-card--everywhere">
          <div class="bento-everywhere-icon">
            <svg
              width="28"
              height="28"
              viewBox="0 0 24 24"
              fill="none"
              stroke="#6B4EFF"
              stroke-width="1.5"
              stroke-linecap="round"
              stroke-linejoin="round"
              aria-hidden="true"
            >
              <circle cx="12" cy="12" r="10"></circle>
              <path d="M2 12h20"></path>
              <path
                d="M12 2a15.3 15.3 0 0 1 4 10 15.3 15.3 0 0 1-4 10 15.3 15.3 0 0 1-4-10 15.3 15.3 0 0 1 4-10z"
              ></path>
            </svg>
          </div>
          <h3 class="bento-card-title">Available Everywhere</h3>
          <p class="bento-card-desc">iOS, Android, and Web &#8211; your conversations follow you</p>
        </div>

        <!-- Right tall: Simple Setup -->
        <div class="bento-card bento-card--setup">
          <h3 class="bento-card-title bento-card-title--white">
            Simple Setup, Serious Performance
          </h3>
          <div class="bento-card-image">
            <!-- Placeholder: provide /images/hero-screen.png -->
            <img src="/images/hero-screen.png" alt="HushChat app screenshot showing simple setup" />
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- STEPS SECTION -->
  <section class="steps section-padding">
    <div class="container">
      <div class="text-center">
        <h2 class="section-heading">Get Started with HushChat in 3 Simple Steps</h2>
        <p class="section-subtitle">
          From signup to seamless conversations &#8211; HushChat makes setup effortless
        </p>
      </div>

      <div class="steps-grid">
        <!-- Step 1 -->
        <div class="step-card">
          <div class="step-icon">
            <svg
              width="28"
              height="28"
              viewBox="0 0 24 24"
              fill="none"
              stroke="#6B4EFF"
              stroke-width="1.5"
              stroke-linecap="round"
              stroke-linejoin="round"
              aria-hidden="true"
            >
              <path d="M12 2L2 7l10 5 10-5-10-5z"></path>
              <path d="M2 17l10 5 10-5"></path>
              <path d="M2 12l10 5 10-5"></path>
            </svg>
          </div>
          <span class="step-number">01</span>
          <h3 class="step-title">Set Up Your Workspace</h3>
          <p class="step-desc">Create your workspace and customize it for your team.</p>
        </div>

        <!-- Step 2 -->
        <div class="step-card">
          <div class="step-icon">
            <svg
              width="28"
              height="28"
              viewBox="0 0 24 24"
              fill="none"
              stroke="#6B4EFF"
              stroke-width="1.5"
              stroke-linecap="round"
              stroke-linejoin="round"
              aria-hidden="true"
            >
              <path d="M16 21v-2a4 4 0 0 0-4-4H6a4 4 0 0 0-4 4v2"></path>
              <circle cx="9" cy="7" r="4"></circle>
              <line x1="19" y1="8" x2="19" y2="14"></line>
              <line x1="22" y1="11" x2="16" y2="11"></line>
            </svg>
          </div>
          <span class="step-number">02</span>
          <h3 class="step-title">Invite Your Team</h3>
          <p class="step-desc">Add teammates or departments and start collaborating instantly.</p>
        </div>

        <!-- Step 3 -->
        <div class="step-card">
          <div class="step-icon">
            <svg
              width="28"
              height="28"
              viewBox="0 0 24 24"
              fill="none"
              stroke="#6B4EFF"
              stroke-width="1.5"
              stroke-linecap="round"
              stroke-linejoin="round"
              aria-hidden="true"
            >
              <path d="M21 15a2 2 0 0 1-2 2H7l-4 4V5a2 2 0 0 1 2-2h14a2 2 0 0 1 2 2z"></path>
              <path d="M8 9h8"></path>
              <path d="M8 13h5"></path>
            </svg>
          </div>
          <span class="step-number">03</span>
          <h3 class="step-title">Start Communicating</h3>
          <p class="step-desc">Message, share, and connect&#8212;all in one simple platform.</p>
        </div>
      </div>
    </div>
  </section>

  <!-- CTA SECTION -->
  <section class="cta section-padding">
    <div class="container">
      <div class="cta-grid">
        <div class="cta-content">
          <h2>Collaborate, communicate, and move work forward with HushChat.</h2>
          <p class="cta-subtitle">
            Join teams who've simplified their communication. Get started today &#8211; we'll help
            you set everything up.
          </p>
          <a href="/contact" class="btn-primary cta-btn">Get started</a>
        </div>
        <div class="cta-decoration">
          <div class="cta-deco-block"></div>
        </div>
      </div>
    </div>
  </section>
</Layout>

<style>
  /* HERO SECTION */
  .hero {
    background: linear-gradient(180deg, var(--color-light-bg-alt) 0%, var(--color-white) 100%);
    padding: 5rem 0 0;
    position: relative;
    z-index: 2;
  }

  .hero-content {
    text-align: center;
    margin-bottom: 3rem;
  }

  .hero h1 {
    font-size: 65px;
    font-weight: 600;
    line-height: 1.15;
    margin-bottom: 1.25rem;
    color: var(--color-heading);
    max-width: 900px;
    margin: 0 auto 2rem;
  }

  .hero-subtitle {
    font-size: 1.125rem;
    color: var(--color-muted);
    line-height: 1.7;
    margin-bottom: 2rem;
    max-width: 720px;
    margin: 0 auto 1.5rem;
  }

  .hero-btn {
    font-size: 1.0625rem;
    padding: 1rem 2.5rem;
  }

  .hero-image {
    width: 100%;
    border-radius: 0.75rem;
    overflow: hidden;
    margin-bottom: -6rem;
    position: relative;
    z-index: 2;
  }

  .hero-image img {
    width: 100%;
    height: auto;
    display: block;
  }

  /* SOCIAL PROOF BANNER */
  .social-proof {
    padding: 4rem 0 4rem;
    background: #182238;
    z-index: 999;
    position: relative;
  }

  .social-proof-text {
    text-align: center;
    font-size: 1.3rem;
    color: var(--color-white);
    font-weight: 500;
  }

  .social-proof-text strong {
    color: var(--color-white);
    font-weight: 700;
  }

  /* TWO-COLUMN FEATURE SECTION */
  .feature-split-grid {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 3rem;
    align-items: center;
  }

  .feature-split-left h2 {
    margin-bottom: 1.25rem;
  }

  .feature-split-desc {
    font-size: 1rem;
    color: var(--color-body-alt);
    line-height: 1.7;
    margin-bottom: 2rem;
  }

  .stat-boxes {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 1rem;
  }

  .stat-box {
    padding: 1.5rem;
    border-radius: 0.75rem;
    display: flex;
    flex-direction: column;
    gap: 0.25rem;
  }

  .stat-box--purple {
    background-color: var(--color-primary);
    color: var(--color-white);
  }

  .stat-box--white {
    background-color: var(--color-white);
    color: var(--color-heading);
    border: 1px solid var(--color-border);
  }

  .stat-number {
    font-size: 2.25rem;
    font-weight: 800;
    line-height: 1;
  }

  .stat-label {
    font-size: 0.875rem;
    font-weight: 500;
    opacity: 0.85;
  }

  .stat-box--white .stat-label {
    color: var(--color-muted);
  }

  .feature-split-right {
    background: var(--color-light-purple);
    border-radius: 1rem;
    padding: 2.5rem 2rem;
    text-align: center;
  }

  .feature-split-right h3 {
    font-size: 1.375rem;
    font-weight: 700;
    margin-bottom: 1.5rem;
    color: var(--color-heading);
  }

  .feature-split-mockup img {
    max-width: 280px;
    margin: 0 auto;
    border-radius: 1.5rem;
    box-shadow: 0 10px 40px rgba(107, 78, 255, 0.15);
  }

  /* FEATURES GRID SECTION */
  .features-grid {
    background: var(--color-light-bg);
  }

  .features-cards {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 1.5rem;
  }

  .feature-card {
    background: var(--color-white);
    border: 1px solid var(--color-border);
    border-radius: 0.75rem;
    padding: 2rem;
    transition:
      box-shadow var(--transition-base),
      transform var(--transition-base);
  }

  .feature-card:hover {
    box-shadow: 0 8px 30px rgba(107, 78, 255, 0.08);
    transform: translateY(-2px);
  }

  .feature-card-icon {
    width: 56px;
    height: 56px;
    background: var(--color-light-purple);
    border-radius: 0.75rem;
    display: flex;
    align-items: center;
    justify-content: center;
    margin-bottom: 1.25rem;
  }

  .feature-card-title {
    font-size: 1.125rem;
    font-weight: 600;
    color: var(--color-heading);
    margin-bottom: 0.75rem;
  }

  .feature-card-desc {
    font-size: 0.9375rem;
    color: var(--color-muted);
    line-height: 1.7;
  }

  /* BENTO GRID SECTION */
  .bento-grid {
    display: grid;
    grid-template-columns: 1fr 1fr 1fr;
    grid-template-rows: auto auto;
    gap: 1.25rem;
  }

  .bento-card {
    border-radius: 1rem;
    padding: 1.75rem;
    overflow: hidden;
  }

  /* Top-left: Live Interaction */
  .bento-card--interaction {
    grid-column: 1 / 2;
    grid-row: 1 / 2;
    background: var(--color-light-bg);
    border: 1px solid var(--color-border);
    display: flex;
    flex-direction: column;
    align-items: center;
  }

  .bento-label {
    font-size: 0.8125rem;
    font-weight: 600;
    color: var(--color-primary);
    text-transform: uppercase;
    letter-spacing: 0.05em;
    margin-bottom: 1rem;
  }

  .bento-card--interaction .bento-card-image img {
    max-width: 180px;
    margin: 0 auto;
    border-radius: 1rem;
  }

  /* Top-center: Helping Teams */
  .bento-card--teams {
    grid-column: 2 / 3;
    grid-row: 1 / 2;
    background: var(--color-light-purple);
    display: flex;
    align-items: center;
    justify-content: center;
    text-align: center;
  }

  .bento-card-text {
    font-size: 1.125rem;
    font-weight: 600;
    color: var(--color-heading);
    line-height: 1.5;
  }

  /* Bottom-left: Available Everywhere */
  .bento-card--everywhere {
    grid-column: 1 / 3;
    grid-row: 2 / 3;
    background: var(--color-white);
    border: 1px solid var(--color-border);
    display: flex;
    flex-direction: column;
    justify-content: center;
  }

  .bento-everywhere-icon {
    width: 48px;
    height: 48px;
    background: var(--color-light-purple);
    border-radius: 0.75rem;
    display: flex;
    align-items: center;
    justify-content: center;
    margin-bottom: 1rem;
  }

  .bento-card-title {
    font-size: 1.25rem;
    font-weight: 700;
    color: var(--color-heading);
    margin-bottom: 0.5rem;
  }

  .bento-card-title--white {
    color: var(--color-white);
  }

  .bento-card-desc {
    font-size: 0.9375rem;
    color: var(--color-muted);
    line-height: 1.6;
  }

  /* Right tall: Simple Setup */
  .bento-card--setup {
    grid-column: 3 / 4;
    grid-row: 1 / 3;
    background: var(--color-primary);
    display: flex;
    flex-direction: column;
    justify-content: space-between;
  }

  .bento-card--setup .bento-card-image {
    margin-top: 1.5rem;
    flex: 1;
    display: flex;
    align-items: flex-end;
    justify-content: center;
  }

  .bento-card--setup .bento-card-image img {
    max-width: 220px;
    border-radius: 1rem 1rem 0 0;
    box-shadow: 0 -4px 20px rgba(0, 0, 0, 0.15);
  }

  /* STEPS SECTION */
  .steps {
    background: var(--color-light-bg);
  }

  .steps-grid {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: 1.5rem;
  }

  .step-card {
    background: var(--color-white);
    border: 1px solid var(--color-border);
    border-radius: 0.75rem;
    padding: 2rem;
    text-align: center;
    transition:
      box-shadow var(--transition-base),
      transform var(--transition-base);
  }

  .step-card:hover {
    box-shadow: 0 8px 30px rgba(107, 78, 255, 0.08);
    transform: translateY(-2px);
  }

  .step-icon {
    width: 56px;
    height: 56px;
    background: var(--color-light-purple);
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    margin: 0 auto 1rem;
  }

  .step-number {
    display: block;
    font-size: 0.8125rem;
    font-weight: 700;
    color: var(--color-primary);
    margin-bottom: 0.75rem;
    letter-spacing: 0.05em;
  }

  .step-title {
    font-size: 1.125rem;
    font-weight: 600;
    color: var(--color-heading);
    margin-bottom: 0.5rem;
  }

  .step-desc {
    font-size: 0.9375rem;
    color: var(--color-muted);
    line-height: 1.6;
  }

  /* CTA SECTION */
  .cta {
    background: var(--color-white);
  }

  .cta-grid {
    display: grid;
    grid-template-columns: 1.2fr 0.8fr;
    gap: 3rem;
    align-items: center;
    background: var(--color-light-bg-alt);
    border-radius: 1.25rem;
    padding: 4rem;
    overflow: hidden;
  }

  .cta-content h2 {
    font-size: 2rem;
    font-weight: 700;
    line-height: 1.25;
    margin-bottom: 1rem;
  }

  .cta-subtitle {
    font-size: 1rem;
    color: var(--color-muted);
    line-height: 1.7;
    margin-bottom: 2rem;
  }

  .cta-decoration {
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .cta-deco-block {
    width: 100%;
    max-width: 280px;
    aspect-ratio: 1;
    background: linear-gradient(135deg, var(--color-primary) 0%, var(--color-secondary) 100%);
    border-radius: 1.5rem;
    opacity: 0.9;
  }

  /* RESPONSIVE - TABLET */
  @media (max-width: 1024px) {
    .hero h1 {
      font-size: 48px;
    }

    .feature-split-grid {
      gap: 2rem;
    }

    .bento-grid {
      grid-template-columns: 1fr 1fr;
      grid-template-rows: auto auto auto;
    }

    .bento-card--interaction {
      grid-column: 1 / 2;
      grid-row: 1 / 2;
    }

    .bento-card--teams {
      grid-column: 2 / 3;
      grid-row: 1 / 2;
    }

    .bento-card--setup {
      grid-column: 1 / 3;
      grid-row: 2 / 3;
      flex-direction: row;
      align-items: center;
      gap: 2rem;
    }

    .bento-card--setup .bento-card-image {
      margin-top: 0;
    }

    .bento-card--everywhere {
      grid-column: 1 / 3;
      grid-row: 3 / 4;
    }

    .cta-grid {
      padding: 3rem;
    }
  }

  /* RESPONSIVE - MOBILE */
  @media (max-width: 767px) {
    .hero {
      padding: 3rem 0 2.5rem;
