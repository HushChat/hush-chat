# ================================
# SPRING CONFIGURATION
# ================================
ACTIVE_SPRING_PROFILES=local

# PostgreSQL Database
SPRING_DATASOURCE_URL=jdbc:postgresql://<POSTGRES_HOST>:<POSTGRES_PORT>/<DATABASE_NAME>?sslmode=disable&currentSchema=<SCHEMA_NAME>
SPRING_DATASOURCE_USERNAME=<DB_USERNAME>
SPRING_DATASOURCE_PASSWORD=<DB_PASSWORD>
SPRING_DATASOURCE_DEFAULT_SCHEMA=<DEFAULT_SCHEMA>
SPRING_DATASOURCE_GLOBAL_SCHEMA=<GLOBAL_SCHEMA>

# Redis
SPRING_DATA_REDIS_HOST=<REDIS_HOST>
SPRING_DATA_REDIS_PORT=<REDIS_PORT>

# ================================
# AWS CONFIGURATION
# ================================
CLOUD_AWS_CREDENTIALS_ACCESS_KEY=<AWS_ACCESS_KEY>
CLOUD_AWS_CREDENTIALS_SECRET_KEY=<AWS_SECRET_KEY>
PRIVATE_BUCKET_NAME=<S3_BUCKET_NAME>

# AWS Cognito
AWS_COGNITO_REGION=<AWS_REGION>
AWS_COGNITO_USER_POOL_ID=<COGNITO_USER_POOL_ID>
AWS_COGNITO_CLIENT_ID=<COGNITO_CLIENT_ID>
AWS_COGNITO_JWKS=https://cognito-idp.<AWS_REGION>.amazonaws.com/<COGNITO_USER_POOL_ID>/.well-known/jwks.json

# ================================
# LOGGING / MONITORING
# ================================
LOG_ELK_HOST=<LOGSTASH_HOST>
LOG_ELK_PORT=<LOGSTASH_PORT>

# Health Check Secrets
HEALTH_CHECK_REDIS_STATUS_SECRET_KEY=<REDIS_STATUS_SECRET>
HEALTH_CHECK_COMMIT_INFO_SECRET_KEY=<COMMIT_INFO_SECRET>

# ================================
# API DOCUMENTATION
# ================================
SWAGGER_BACKEND_MAIN_JSON_URL=<SWAGGER_JSON_URL>
